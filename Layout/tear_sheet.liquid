<!doctype html>

<!--////////////////// [if IE 9] STUFF BEFORE <head> IS NOT REQUIRED //////////////////-->

<!--[if IE 9]> <html class="ie9 no-js supports-no-cookies{% if settings.layout_container_enable %} container-layout{% endif %}" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies{% if settings.layout_container_enable %} container-layout{% endif %}" lang="{{ shop.locale }}"> <!--<![endif]-->
<!--[if IE 9]> <html class="ie9 no-js supports-no-cookies{% if settings.layout_container_enable %} container-layout{% endif %}" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies{% if settings.layout_container_enable %} container-layout{% endif %}" lang="{{ shop.locale }}"> <!--<![endif]-->

<!--////////////////// Ok... continuing to the Tear Sheet layout //////////////////-->

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="{{ settings.accent_secondary }}">
  <link rel="canonical" href="{{ canonical_url }}">

  <!-- GRABS SITE FAVICON (Delete if you don't want that shown) -->
  {% if settings.favicon %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png" />
  {% endif %}
  
  <!-- EXAMPLE FOR ADDING EXTERNAL <link> TAGS -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">

  <!-- Not really necessary -->
  {% capture seo_title %}
    {{ page_title }}
    {% if current_tags %}
      {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {% endif %}
    {% if current_page != 1 %}
      &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {% endif %}
    {% unless page_title contains shop.name %}
      &ndash; {{ shop.name }}
    {% endunless %}
  {% endcapture %}
  
  <script>
    
//  DECLARE PRODUCT ID FROM URL
    const prodIdUrl = window.location.search.substr(1)

//  DELETES THE "=&ose=false" FROM PRODUCT ID STRING
    var prodId = prodIdUrl.replace("=&ose=false", "")
    
//  SPLIT "&" INTO OBJECTS (if you need multiple variables)
    const urlRes = prodIdUrl.split("&");
    
//  DECLARE PRODUCT TITLE
    const titleStore = prodId + "title";
    var titleGet = localStorage.getItem(titleStore)
    
//  UPDATE PAGE TITLE TO PRODUCT NAME (this will save document as "[title].PDF")
    document.title = titleGet
    
  </script>
  
  //document.title//
  <title></title>

  ////////////////////////////////////////////////////////////////////////////////////////////////////
  ////  ONLY {{ content_for_header }} is required, the rest is not really necessary for this page ////
  ////  Do not call the theme's css (or scss), we want to add in our own styling to this document ////
  ////////////////////////////////////////////////////////////////////////////////////////////////////

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
  </script>

  {% if template.directory == 'customers' %}
    <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script><!--<![endif]-->
    <!--[if lte IE 9]><script src="{{ 'shopify_common.js' | shopify_asset_url }}"></script><![endif]-->
  {% endif %}

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'head.js' | asset_url }}"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'head.js' | asset_url }}"></script><![endif]-->

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'theme.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'theme.js' | asset_url }}"></script><![endif]-->

  {{ content_for_header }}


</head>

<body id="sheet-id" class="sheet-class">

    <!-- DISPLAYS CONTENT FROM "Templates/page.tear-sheet" -->
    <main role="main" id="MainContent" class="main-content">

      <!-- Required -->
      {{ content_for_layout }}

    </main>


  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  <script>Shopify.money_format = '{{ shop.money_format }}';</script>
  
</body>


</html>
