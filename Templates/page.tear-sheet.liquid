    display: none !important;
  }
 
  /* PAGE & PRINT SETUP */
  @page {
    size: auto;
    margin: 0 auto;
    @page :footer {
        display: none
    }
  
    @page :header {
        display: none
    }
  }
  
  @media print {
    html, body {
      width: 99%;
      height: 99%;
      margin: 0 auto;
      display: block;
      text-align: center;
